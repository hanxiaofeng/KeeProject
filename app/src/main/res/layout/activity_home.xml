            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_80"
            android:background="@color/purple_500"
            />
        <LinearLayout
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_80"
            android:background="#882323"
            />

    </LinearLayout>


</LinearLayout>